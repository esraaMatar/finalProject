<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andoird.lastproj.MainActivity"
    android:background="#49268b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Numbers From 1 to 5"
        android:background="#040303"
        android:autoText="false"
        android:textColor="#f80202"
        android:textSize="30dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number One"
        android:id="@+id/button"
        android:onClick="num"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"

        android:textSize="20dp"
        android:textColor="#e52121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Two"
        android:id="@+id/button2"
        android:onClick="num"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textSize="20dp"
        android:textColor="#e52121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Three"
        android:id="@+id/button3"
        android:layout_below="@+id/button"
        android:onClick="num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textColor="#e52121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Four"
        android:id="@+id/button4"
        android:onClick="num"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textColor="#e52121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Five"
        android:id="@+id/button5"
        android:onClick="num"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="20dp"
        android:textColor="#e52121" />
</RelativeLayout>
